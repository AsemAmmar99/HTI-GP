<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:background="@color/light_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvItemNumber"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintEnd_toStartOf="@id/tvItemCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="N"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tvItemCode"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tvItemSubject"
        app:layout_constraintStart_toEndOf="@id/tvItemNumber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/table_content_cell_bg"
        android:text="Code"
        android:textColor="@color/light_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvItemSubject"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tvItemUnits"
        app:layout_constraintStart_toEndOf="@id/tvItemCode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:background="@drawable/table_content_cell_bg"
        android:text="Subject"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/tvItemUnits"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/tvItemSubject"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Units"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:background="@drawable/table_content_cell_bg"
        />
</androidx.constraintlayout.widget.ConstraintLayout>