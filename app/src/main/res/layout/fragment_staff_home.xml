<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.scorpion_a.studentapp.fragments.StaffHomeFragment">

  <ProgressBar
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/progressBarSHome"
      android:gravity="center"
      android:visibility="gone"
      android:indeterminate="true"
      android:indeterminateDrawable="@drawable/progress_bg"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
      android:layout_width="0dp"
      android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:id="@+id/swipe_refresh_layout">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/clSHome">

    <TextView
        android:id="@+id/tvHti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/higher_technological_institute"
        android:textColor="@color/light_black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12sp"
        />

    <ImageView
        android:id="@+id/htiLogo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12sp"
        app:srcCompat="@drawable/htilogo" />

    <carbon.widget.ConstraintLayout
        android:id="@+id/layout_staff_dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/htiLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_margin="10dp"
        app:carbon_cornerRadius="12dp"
        >
      <TextView
          android:id="@+id/tvStaffDepartment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Department: Employee"
          android:textColor="@color/light_black"
          android:textStyle="bold"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_margin="10dp"
          />

    </carbon.widget.ConstraintLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/layout_staff_dept"
    app:layout_constraintBottom_toTopOf="@id/tvPowered"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="0dp">

    <carbon.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clSearch"
        app:carbon_cornerRadius="12dp"
        app:carbon_stroke="@color/light_black"
        app:carbon_strokeWidth="0.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:id="@+id/ivSearch"
          android:src="@drawable/ic_search"
          android:layout_margin="15dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tvSearch"
          android:text="@string/search_for_request"
          android:textSize="18dp"
          android:textColor="@color/light_black"
          android:textStyle="bold"
          app:layout_constraintStart_toEndOf="@id/ivSearch"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

    </carbon.widget.ConstraintLayout>

    <carbon.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clAccepted"
        app:carbon_cornerRadius="12dp"
        app:carbon_stroke="@color/light_black"
        app:carbon_strokeWidth="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/clSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:id="@+id/ivAcccepted"
          android:src="@drawable/ic_accepted"
          android:layout_margin="15dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tvAccepted"
          android:text="@string/accepted_requests"
          android:textSize="18dp"
          android:textColor="@color/light_black"
          android:textStyle="bold"
          app:layout_constraintStart_toEndOf="@id/ivAcccepted"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

    </carbon.widget.ConstraintLayout>

    <carbon.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clPending"
        app:carbon_cornerRadius="12dp"
        app:carbon_stroke="@color/light_black"
        app:carbon_strokeWidth="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/clAccepted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:id="@+id/ivPending"
          android:src="@drawable/requests_icon"
          android:layout_margin="15dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tvPending"
          android:text="@string/pending_requests"
          android:textSize="18dp"
          android:textColor="@color/light_black"
          android:textStyle="bold"
          app:layout_constraintStart_toEndOf="@id/ivPending"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

    </carbon.widget.ConstraintLayout>

    <carbon.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clRejected"
        app:carbon_cornerRadius="12dp"
        app:carbon_stroke="@color/light_black"
        app:carbon_strokeWidth="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/clPending"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:id="@+id/ivRejected"
          android:src="@drawable/ic_rejected"
          android:layout_margin="15dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tvRejected"
          android:text="@string/rejected_requests"
          android:textSize="18dp"
          android:textColor="@color/light_black"
          android:textStyle="bold"
          app:layout_constraintStart_toEndOf="@id/ivRejected"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

    </carbon.widget.ConstraintLayout>

    <carbon.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clDelivered"
        app:carbon_cornerRadius="12dp"
        app:carbon_stroke="@color/light_black"
        app:carbon_strokeWidth="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/clRejected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:id="@+id/ivDelivered"
          android:src="@drawable/ic_delivered"
          android:layout_margin="15dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tvDelivered"
          android:text="@string/delivered_requests"
          android:textSize="18dp"
          android:textColor="@color/light_black"
          android:textStyle="bold"
          app:layout_constraintStart_toEndOf="@id/ivDelivered"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

    </carbon.widget.ConstraintLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

    <TextView
        android:id="@+id/tvPowered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/powered_by_department_of_computers_and_information_systems"
        android:textAlignment="center"
        android:textColor="@color/light_black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>