<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".activities.RequestDataActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clData"
        android:background="@drawable/roundedcorner2"
        app:layout_constraintTop_toBottomOf="@+id/tvEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameInEnglish"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/light_black"
            android:text="@string/name_in_english"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvNameInEnglishValue"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameInEnglishValue"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/dark_red"
            android:text="Asem Elsayed Abd-Elhameed Ammar"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNameInEnglish"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameInArabic"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/light_black"
            android:text="@string/name_in_arabic"
            app:layout_constraintStart_toStartOf="@+id/tvNameInEnglish"
            app:layout_constraintTop_toBottomOf="@id/tvNameInEnglish"
            android:layout_marginTop="15dp"
           />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameInArabicValue"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/dark_red"
            android:text="عاصم السيد عبد الحميدعمار"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@id/tvNameInEnglish"
            app:layout_constraintStart_toEndOf="@id/tvNameInEnglish"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDepartment"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/light_black"
            android:text="@string/department"
            app:layout_constraintStart_toStartOf="@+id/tvNameInEnglish"
            app:layout_constraintTop_toBottomOf="@id/tvNameInArabic"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDepartmentValue"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/dark_red"
            android:text="Computer Science"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@id/tvNameInArabic"
            app:layout_constraintStart_toEndOf="@id/tvNameInEnglish"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvId"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/light_black"
            android:text="@string/id"
            app:layout_constraintStart_toStartOf="@+id/tvNameInEnglish"
            app:layout_constraintTop_toBottomOf="@id/tvDepartment"
            android:layout_marginTop="10dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvIdValue"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/dark_red"
            android:text="42017092"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@id/tvDepartment"
            app:layout_constraintStart_toEndOf="@id/tvNameInEnglish"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginEnd="5dp"
        android:text="@string/edit"
        android:textStyle="bold"
        android:textColor="@color/dark_red"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/clData"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/ivAddPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_action_add"
        android:background="@drawable/roundedcorner2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEdit"
        />

    <carbon.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:id="@+id/buUploadPhoto"
        app:carbon_cornerRadius="15dp"
        android:text="@string/upload_photo"
        android:textColor="@color/white"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivAddPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/notes_bring_with_you6_photos_4_6_white_background"
        android:textStyle="bold"
        android:textColor="@color/dark_red"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/buUploadPhoto"
        app:layout_constraintStart_toStartOf="parent"
        />

    <carbon.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:id="@+id/buSendRequest"
        app:carbon_cornerRadius="15dp"
        android:text="@string/send_request"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNote"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>