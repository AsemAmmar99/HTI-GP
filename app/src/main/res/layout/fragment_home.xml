<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <TextView
        android:id="@+id/tvHti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/higher_technological_institute"
        android:textColor="@color/light_black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12sp"
        />

    <ImageView
        android:id="@+id/htiLogo"
        android:layout_width="45dp"
        android:layout_height="45dp"
       android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12sp"
        app:srcCompat="@drawable/htilogo" />

    <carbon.widget.ConstraintLayout
        android:id="@+id/layout_dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/htiLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_margin="10dp"
        app:carbon_cornerRadius="12dp"
        >
        <TextView
            android:id="@+id/tvDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department: Computer Science"
            android:textColor="@color/light_black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            />

    </carbon.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/events"
        android:textColor="@color/light_black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/layout_dept"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12sp"
        />
    <TextView
        android:id="@+id/tvEventsMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/layout_dept"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12sp"
        />
    <carbon.widget.ConstraintLayout
        android:id="@+id/layout_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEvents"
        app:layout_constraintBottom_toTopOf="@+id/tvNews"
        android:background="@color/white"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:carbon_cornerRadius="12dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbars="vertical"
            android:id="@+id/rvEvents"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            >
        </androidx.recyclerview.widget.RecyclerView>
    </carbon.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tvNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news"
        android:textColor="@color/light_black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/layout_events"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12sp"
        />
    <TextView
        android:id="@+id/tvNewsMoreBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/layout_events"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12sp"
        />



<carbon.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvNews"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/white"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:carbon_cornerRadius="12dp"
    android:layout_marginTop="10dp"
    android:padding="5dp"
    >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:id="@+id/rvNewsList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            >
        </androidx.recyclerview.widget.RecyclerView>
</carbon.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>