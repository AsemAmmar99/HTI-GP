<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clRequestItem"
    >

    <ImageView
        android:id="@+id/ivrequest_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/requests_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
            android:id="@+id/tvRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificate"
            android:textColor="@color/light_black"
            android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@+id/ivrequest_icon"
            app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPrice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvEG"
        android:text="50"
        android:layout_marginTop="20dp"
        android:textColor="@color/light_black"
        android:layout_marginEnd="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEG"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/eg"
        android:textColor="@color/light_black"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"

        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_blue"
        app:layout_constraintTop_toBottomOf="@+id/ivrequest_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>