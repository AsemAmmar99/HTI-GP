<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvSupervisorNumber"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintEnd_toStartOf="@id/tvItemStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="N"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tvItemStatus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tvItemDepartment"
        app:layout_constraintStart_toEndOf="@id/tvSupervisorNumber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/table_content_cell_bg"
        android:text="Status"
        android:textColor="@color/light_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvItemDepartment"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tvItemDate"
        app:layout_constraintStart_toEndOf="@id/tvItemStatus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:background="@drawable/table_content_cell_bg"
        android:text="Department"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tvItemDate"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tvItemName"
        app:layout_constraintStart_toEndOf="@id/tvItemDepartment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:background="@drawable/table_content_cell_bg"
        android:text="Date"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/tvItemDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Name"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:background="@drawable/table_content_cell_bg"
        />
</androidx.constraintlayout.widget.ConstraintLayout>