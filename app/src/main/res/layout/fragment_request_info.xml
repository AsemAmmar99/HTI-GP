<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    app:carbon_cornerRadius="15dp"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvtitle"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_informationf"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:textColor="@color/light_black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvRequestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtitle"
        android:text="@string/name"
        android:textColor="@color/light_black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tvRequestNameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvtitle"
        app:layout_constraintStart_toEndOf="@id/tvRequestName"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="English Graduation Certificate"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/tvRequestPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRequestName"
        android:text="@string/price"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tvRequestPriceValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvRequestPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRequestNameValue"
        android:text="08730"
        android:textColor="@color/light_black"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tvRequestTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRequestPrice"
        android:text="@string/total_price"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tvRequestTotalPriceValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvRequestTotalPrice"
        app:layout_constraintTop_toBottomOf="@id/tvRequestPrice"
        android:text="5654"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvRequestCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRequestTotalPrice"
        android:text="@string/count"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/etRequestCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="12dp"
        android:hint="@string/count"
        android:inputType="number"
        android:textColor="@color/dark_blue"
        android:textSize="12dp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@id/tvRequestCount"
        app:layout_constraintTop_toBottomOf="@id/tvRequestTotalPrice"
        />

    <TextView
        android:id="@+id/tvTotalPriceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/etRequestCount"
        app:layout_constraintTop_toBottomOf="@id/tvRequestTotalPrice"
        android:text="@string/total_price"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        />

    <carbon.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buSendRequest"
        android:background="@color/dark_blue"
        android:text="@string/send_request"
        android:textColor="@color/white"
        app:carbon_cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRequestCount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="15dp"/>
</carbon.widget.ConstraintLayout>